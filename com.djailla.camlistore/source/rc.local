#!/bin/sh -e
#
# rc.local
#

PIDFILE=/opt/camlistore/pid

case $1 in
  start)
    start-stop-daemon --start \
                      --make-pidfile \
                      --pidfile $PIDFILE \
                      --background \
                      --exec /opt/camlistore/bin/camlistored
    ;;
  stop)
    start-stop-daemon --stop --pidfile $PIDFILE
    rm $PIDFILE
    ;;
esac
